{
	"name": "@mdrv/arc",
	"version": "0.0.5",
	"description": "A modern, lightweight client-side router for Svelte 5 with View Transition API support and advanced animation control",
	"type": "module",
	"main": "./src/index.ts",
	"module": "./src/index.ts",
	"types": "./src/index.ts",
	"svelte": "./src/index.ts",
	"exports": {
		".": {
			"svelte": "./src/index.ts",
			"types": "./src/index.ts",
			"import": "./src/index.ts"
		}
	},
	"files": [
		"dist",
		"src",
		"README.md"
	],
	"scripts": {
		"build": "tsdown",
		"b": "tsdown",
		"dev": "tsdown --watch",
		"d": "tsdown --watch",
		"format": "dprint fmt",
		"format:check": "dprint check",
		"typecheck": "tsc --noEmit",
		"test": "vitest",
		"test:ui": "vitest --ui",
		"test:run": "vitest run",
		"test:coverage": "vitest run --coverage",
		"prepublishOnly": "bun run format && bun run typecheck && bun run build"
	},
	"keywords": [
		"svelte",
		"svelte5",
		"router",
		"routing",
		"view-transitions",
		"transitions",
		"spa",
		"client-side",
		"navigation",
		"typescript"
	],
	"author": "",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/mdsv/arc"
	},
	"bugs": {
		"url": "https://github.com/mdsv/arc/issues"
	},
	"homepage": "https://github.com/mdsv/arc#readme",
	"peerDependencies": {
		"svelte": "^5.0.0"
	},
	"devDependencies": {
		"@types/bun": "latest",
		"@vitest/coverage-v8": "^4.0.17",
		"dprint": "latest",
		"happy-dom": "^20.3.1",
		"svelte": "^5.0.0",
		"tsdown": "latest",
		"typescript": "latest",
		"vitest": "^4.0.17"
	}
}
